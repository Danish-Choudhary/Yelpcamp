<% include ../partials/header %>
<div class="row">
	<h1 style="text-align: center;">Create New Campgrounds</h1>
	<div style="width:30%; margin: 25px auto;">
		<form action="/campgrounds/<%= campgrounds._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="campgrounds[name]" value="<%= campgrounds.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campgrounds[image]" value="<%= campgrounds.image %>" >
				</div>
				<div class="form-group">
 					 <input class="form-control" type="number" name="campgrounds[cost]" value="<%= campgrounds.cost %>" step="0.01" min="0" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campgrounds[description]" value="<%= campgrounds.description %>" >
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
		</form>
		<a href="/campgrounds">Go BAck</a>
	</div>		
</div>

<% include ../partials/footer %>
